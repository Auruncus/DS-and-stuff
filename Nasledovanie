#include <iostream>
#include<string>
using namespace std;

class Person
{
protected:
	string fio;
	int age;
public:
	Person(string fio, int age)
	{
		this->fio=fio;
		this->age = age;
	}
	void print(){
		cout << fio << ',' << age;
	}

};

class Prisoner :public Person
{
protected:
	int period;
	string cause;
public:
	Prisoner(string fio, int age, int period, string cause):Person(fio,age)
	{
		this->period = period;
		this->cause = cause;
	}
	void print()
	{
		Person::print();
		cout << "," << period << cause;
	}
};


int main()
{
	Prisoner a2356("Loshadinko A.N", 33, 5, "228.1");
	a2356.print();
	Person *p = new Prisoner("Vilkin B.B",35,5,"105.1");
	p->print();
	((Prisoner*)p)->print();
	//Prisoner *q = (Prisoner*)new Person("Zubenko M.P", 40); NELZYA
	//q->print();
	system("pause");
	return 0;
}

